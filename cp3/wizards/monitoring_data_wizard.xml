<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="monitoring_data_wizard" model="ir.ui.view">
        <field name="name">monitoring.data.wizard.wizard.form</field>
        <field name="model">monitoring.data.wizard</field>
        <field name="arch" type="xml">
        <form>
            <group>
                <field name="date" required="1"/>
                <field name="construction_id" required="1"/>
            </group>
            <footer>
                <button name="export_data" string="Export" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-secondary" special="cancel" />
            </footer>
        </form>
        </field>
    </record>
</odoo>
