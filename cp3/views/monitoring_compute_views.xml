<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="monitoring_compute_view_form" model="ir.ui.view">
            <field name="name">monitoring.compute.form.view</field>
            <field name="model">monitoring.compute</field>
            <field name="arch" type="xml">
                <form string="Compute">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar image_compute"/>
                        <group>
                            <field name="name" required="1"/>
                            <field name="main_code"/>
                            <field name="code" invisible="0" readonly="0"/>
                            <field name="warning" required="1"/>
                            <field name="alarm" required="1"/>
                            <field name="alert" required="1"/>
                        </group>
                        <notebook>
                            <page string="Value">
                                <field name="compute_ids">
                                    <tree editable="bottom">
                                        <field name="name" required="1"/>
                                        <field name="value"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Device">
                                <field name="device_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="monitoring_compute_view_tree" model="ir.ui.view">
            <field name="name">monitoring.compute.list.view</field>
            <field name="model">monitoring.compute</field>
            <field name="arch" type="xml">
                <tree string="Compute">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_monitoring_compute" model="ir.actions.act_window">
            <field name="name">Compute</field>
            <field name="res_model">monitoring.compute</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
